= form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :location
    = f.text_field :location
  .field
    = f.label :start_time
    = f.datetime_select :start_time
  .field
    = f.label :duration
    = f.number_field :duration
  .field
    = f.label :registration_min
    = f.number_field :registration_min
  .field
    = f.label :registration_limit
    = f.number_field :registration_limit
  .field
    = f.label :user
    = f.collection_select :user_id, User.all, :id, :name
  .field
    = f.label :sport
    = f.collection_select :sport_id, Sport.all, :id, :name
  .actions
    = f.submit 'Save'
